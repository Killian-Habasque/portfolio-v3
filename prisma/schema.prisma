// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // output   = "./generated/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") 
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Project {
  id           String       @id @default(uuid())
  title        String
  slug         String       @unique
  text         String
  date         String
  type         String
  imgLink      String?
  videoLink    String?
  externalLink String?
  order        Int?
  technologies Technology[]
  blocks       Block[]
}

model Technology {
  id       String    @id @default(uuid())
  name     String
  slug     String    @unique
  imgLink  String?
  projects Project[]
}

model Block {
  id        String    @id @default(uuid())
  type      BlockType
  content   Json
  projectId String
  project   Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

enum BlockType {
  TEXT
  IMAGE
  LIST
  VIDEO
}
